@model GH.Web.Models.ApplicationHeaderViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
   
<style>
.form div.left {
    float: left;
    width: 30%;
}
		
</style>

           
<div id="block-tables" class="block">
<div class="content">
<div class="inner">
@using (Html.BeginForm("Index", "AppSetting", FormMethod.Post, new { @class = "form", @enctype = "multipart/form-data" })) 
{
    <table cellspacing="20">
        <tr style="vertical-align:top;">
            <td>
                <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sApplicationName)
                        @Html.TextBoxFor(model => model.ApplicationSetting.kApplicationSettingId, new { @Style = "display:none" })
			        </div>
        	        <div class="right">
            	        @Html.TextBoxFor(model => model.ApplicationSetting.sApplicationName, new { @class = "textBoxStyle" })
			        </div>
                </div>

		        <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sApplicationAddress)
			        </div>
        	        <div class="right">
            	        @Html.TextAreaFor(model => model.ApplicationSetting.sApplicationAddress, new { @class = "textAreaStyle" })
			        </div>
                </div>

		        <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sCity)
			        </div>
        	        <div class="right">
            	        @Html.TextBoxFor(model => model.ApplicationSetting.sCity, new { @class = "textBoxStyle" })
			        </div>
                </div>

		        <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sZip)
			        </div>
        	        <div class="right">
            	        @Html.TextBoxFor(model => model.ApplicationSetting.sZip, new { @class = "textBoxStyle" })
			        </div>
                </div>

		        <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sPhone)
			        </div>
        	        <div class="right">
            	        @Html.TextBoxFor(model => model.ApplicationSetting.sPhone, new { @class = "textBoxStyle" })
			        </div>
                </div>

		        <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sMobile)
			        </div>
        	        <div class="right">
            	        @Html.TextBoxFor(model => model.ApplicationSetting.sMobile, new { @class = "textBoxStyle" })
			        </div>
                </div>

		        <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sFax)
			        </div>
        	        <div class="right">
            	        @Html.TextBoxFor(model => model.ApplicationSetting.sFax, new { @class = "textBoxStyle" })
			        </div>
                </div>

                 <div class="group navform wat-cf">
		            <div class="right">
			            <button class="button" type="submit">
				        <img src="@Url.Content("~/images/icons/tick.png")" alt="Save" />
				        Save
				        </button>
                        <p>@Html.ValidationMessage("ApplicationSetting")</p>
			        </div>
		        </div>
            </td>
            <td>
                <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sApplicationHeader)
			        </div>
        	        <div class="right">
            	        @Html.TextBoxFor(model => model.ApplicationSetting.sApplicationHeader, new { @class = "textBoxStyle" })
			        </div>
                </div>

		        <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sReportHeader)
			        </div>
        	        <div class="right">
            	        @Html.TextBoxFor(model => model.ApplicationSetting.sReportHeader, new { @class = "textBoxStyle" })
			        </div>
                </div>

		        <div class="group wat-cf">
		            <div class="left">
            	        @Html.LabelFor(model => model.ApplicationSetting.sLogoUrl)
			        </div>
        	        <div class="right">
                        <input type="file" name="imgFile" value="เลือกไฟล์" />
                        <img style="width:150px;height:120px;padding-top:5px" src="@(String.IsNullOrEmpty(Model.ApplicationSetting.sLogoUrl) ? "" : Model.ApplicationSetting.sLogoUrl)" />
			        </div>
                </div>
            </td>
        </tr>
       
    </table>  	
}
</div>
</div>
</div>


