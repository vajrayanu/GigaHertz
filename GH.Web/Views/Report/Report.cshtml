@model GH.DAL.Model.Report
<div id="block-create" class="block">
    <div class="content">
        <h2 class="title">
            Report</h2>
        <div class="inner">
@using (Html.BeginForm("Report", "Insert Controller Name Here", FormMethod.Post, new { @class = "form" })) 
{
    <div class="flash">
         <p>@Html.ValidationSummary(true,string.Empty, new { @class = "message error" })</p>
    </div>

		<div class="group wat-cf">
		    <div class="left">
			    @Html.LabelFor(model => model.dtDateStart, new { @class = "label" })
			</div>
			<div class="right">
				@Html.TextBoxFor(model => model.dtDateStart, new { @class = "text_field" })
				@Html.ValidationMessageFor(model => model.dtDateStart)
				<span class="description">Ex: property description</span>
			</div>
		</div>
		<div class="group wat-cf">
		    <div class="left">
			    @Html.LabelFor(model => model.dtDateEnd, new { @class = "label" })
			</div>
			<div class="right">
				@Html.TextBoxFor(model => model.dtDateEnd, new { @class = "text_field" })
				@Html.ValidationMessageFor(model => model.dtDateEnd)
				<span class="description">Ex: property description</span>
			</div>
		</div>
		<div class="group navform wat-cf">
		    <div class="right">
			    <button class="button" type="submit">
				<img src="@Url.Content("~/images/icons/tick.png")" alt="Save" />
				Save
				</button>
				<span class="text_button_padding">or</span>
				@Html.ActionLink("Cancel", "Index", null, new { @class = "text_button_padding link_button" })
			</div>
		</div>
}
        </div>
    </div>
</div>
</body>
</html>

