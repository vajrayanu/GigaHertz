@model GH.Web.Models.BookingClaimViewModel
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $('#Product_ProductType_sDescription').autocomplete({
                source: '@Url.Action("Search2", "ProductType")',
                minLength: 1,
                select: function (event, ui) {
                    $('#Product_ProductType_sDescription').val(ui.item.label);
                    $('#Product_kProductTypeId').val(ui.item.id);
                    return false;
                }
            });
        });
    });
</script>

